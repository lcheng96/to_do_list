<%= stylesheet_link_tag "formatting"%>
<div id="header">
	<h1>To do list</h1>
</div>

<div id="add_link">
	<%= link_to 'Add a New Event', new_item_path %>
</div>

<div class="main">
	<p>
		Things you have so far:
	</p>

	<table>
		<tr>
			<td><strong>Event:</strong></td>
			<td id="spacing"><strong> Time:</strong></td>
		</tr>
		<% @items.each do |article| %>
		<ul>
			<tr>
				<td>
				<li>
					<%= article.event %>
				</li><td>
				<p>
					<%= article.time%>
				</p></td>
				<td><%= link_to 'Show', item_path(article) %></td>
				<td><%= link_to 'Edit', edit_item_path(article) %></td>
				<td><%= link_to 'Delete', item_path(article),
				method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } %></td>
			</tr>
		</ul>
		<% end %>
	</table>
</div>
